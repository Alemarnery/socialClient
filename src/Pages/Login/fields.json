{
  "fields": [
    {
      "title": "Email",
      "type": "text",
      "name": "email",
      "placeholder": "email",
      "validation": {
        "required": "Email is required",
        "pattern": {
          "value": "^[^@ ]+@[^@ ]+.[^@ .]{2,}$",
          "message": "Must be a valid email"
        }
      }
    },
    {
      "title": "Password",
      "type": "password",
      "name": "password",
      "placeholder": "password",
      "validation": {
        "required": "Password is required",
        "minLength": {
          "value": 4,
          "message": "Password must be between 4 and 20 caracters"
        },
        "maxLength": {
          "value": 20,
          "message": "Password must be between 4 and 20 caracters"
        }
      }
    }
  ]
}
